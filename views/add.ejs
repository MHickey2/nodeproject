<body background="sammy.jpg" width="1380px" height="1300px">
    <% include ../partial/header %>
    <br>
    <br>

    <div class="row">
    <br>
    <br>
        <h1 class="white">Please Contact Us</h1>
    </div>
    
    <div class="grid-container1">
            <form accept-charset="UTF-8" action="/add" method="post">

                <div class="item">
                    <label for="name">Name:</label>
                    <input name="name" type="text" minlength="6" placeholder="Please enter your name", pattern='[a-zA-Z][a-zA-Z ]{2,}', title='Please enter your name', required/>
                    <br>
                    <label for="email">Email:</label>
                    <input name="email" type="text" placeholder="Please enter your email address", pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$', title='Correct email Format', required/>
                    <br>
                    <label for="comment">Comment:</label>
                    <input name="comment" type="text" minlength="10" placeholder="Please enter your comment",  pattern='[a-zA-Z][a-zA-Z ]{4,}', title='Did you forget your Comment', required />
                    <br>
                    <button class="button">Leave Comment</button>
                </div>

            </form>
    </div>

