<body background="../cas.jpg" width="1200px" height="1280px">
    <% include ./../partial/header %>
  <br>
  <br>
  <br>
  <br>
  <h1 class="white">Add Products Page</h1>  
  
  
  <div class="grid-container1">
        
            <form accept-charset="UTF-8" action="/addProducts" method="post">    
               <div class="item">
                  <label for="name">Name</label>
                    <input name="name" type="text" minlength="6" placeholder="Enter name",  pattern='[a-zA-Z][a-zA-Z ]{2,}', "Please enter the name", required/><br>
                  
                  
                  <label for="price">Description</label>
                    <input name="description" type="text" minlength="10" placeholder="Enter Description",  pattern='[a-zA-Z][a-zA-Z ]{3,0}', required /><br>
                    
                   
                   <label for="image">Price</label> 
                    <input name="price" type="text" placeholder="Enter Price",  pattern='[1-9]+\.{1}[0-9]{0,3}', title='Numbers Only Please', required/><br>
                    
                   
                   <label for="Image">Image</label> 
                    <input name="image" type="text" placeholder="Enter Image", pattern='[a-z0-9]+\.[a-z]{3,}$', title='Correct Image Format', required /><br>
                    <br> 
                    <button class="button">Add Product</button>
                    <br>
                    <a href="/products">Back to Products</a>
                </div>
            </form>
    </div>
 
</div>

