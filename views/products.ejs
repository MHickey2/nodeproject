<!DOCTYPE html>
<html>
  <head>
   <meta charset="UTF-8">
   
   
    <title>Supernatural Web Site</title>
    
   <link rel="stylesheet" href="app.css" type="text/css">
  </head>
  <body>
    <% include ../partial/header %>

    <div class="row">
                <h1>Product page</h1>

    </div>
    <div class="row">
         <h1>Welcome to the products page</h1>  <br>
            
         <div class="grid-container">
             <% product.forEach(function(product) { %>
           
                      <div class="item">
                         <p class="itemtitle">Id: <%= product.id %></p>
                         <p class="itemp">Name: <%= product.name %> </p>
                         <p class="itemp">Description: <%= product.description %> </p>
                         <p class="itemp">Price: <%= product.price %> </p>
                         <a href="/item/<%- product.id %>">view item</a>
                       </div>

             <% }); %> 
  
  </div>
 </div>

<% include ../partial/footer %>