                                    <input name="id" type="text" value="<%= characters1.chrId %>" />
                                    
                                    <label for="name">Name:</label>
                                    <input name="name" type="text" value="<%= characters1.Name %>" />
                                    
                                    <label for="description">Description:</label>
                                    <input name="description" type="text" value="<%= characters1.Description %>" /> 
                                    
                                    <label for="image">Image:</label>
                                    <input name="image" type="text" class= "pimage" value="<%= characters1.Image %>" />  
                                    <button class="button">Edit Character</button>
                                    <br>
                                </div>
                            </form>
                    <% }); %>  
