            <div class="center">
                <img class="images2" src="../spn.jpg">
            </div>
    <br>
    <br>
    <br>
                <div class="grid-container2">
      
      
                <% res1.forEach(function(characters1) { %>
      
                            <div class="item2">     
                                    <div class="item">
                                       <h2 class="itemtitle">Id: <%= characters1.chrId %></h2>
                                       <h2 class="item">Name: <%= characters1.Name %> </h2>
                                       <img src="/<%= characters1.Image %>" class="pimage"> </image>
                                       <h2 class="item" id="justify">Description: <%= characters1.Description %> </h2>
                                       <a href="/edit/<%= characters1.chrId %>" class="button">Edit Me!</a>
                                       <a href="/deletesql/<%= characters1.chrId %>" class="button">Delete Me!</a>
                                       <a href="/characterssql" class="button">Back!</a><br>
                                    </div>
                    
                    <% res2.forEach(function(trivia1) { %> 
            
                            <div class="item2">     
    <br> 
                                
                                <button id="myButton2" >See Trivia</button>
                                <button id="myButton3">Hide Trivia</button>
                                
    <br>  
    <br>
                                <h4 class="item" id="triv">Trivia: <%= trivia1.Trivia %></h4>
                               <a href="/trivia/<%= characters1.chrId %>" class="button">Edit Me!</a>
                               <a href="/deletesql/<%= characters1.chrId %>" class="button">Delete Me!</a>
                               <a href="/characterssql" class="button">Add trivia</a><br>
     
        
                            </div>
              
              
                    <% }); %>  
     
                </div>
              
              
                <% }); %> 
