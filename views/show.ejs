  <head>
     <script>
         $(document).ready(function() {
              $("#triv").hide();
        
         });

        $(document).ready(function() {
            $("#myButton2").click(function() {
                $("#triv").show();
            })

        });

        $(document).ready(function() {
            $("#myButton3").click(function() {
                $("#triv").hide();
            })

        })

        
